{
  "name": "parcel-tsx-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "start": "parcel serve ./public/index.html --port 3000 --open --target appModern",
    "build": "rimraf -rf ./dist/app && parcel build ./public/index.html --target app",
    "build:watch": "parcel watch ./public/index.html --target app",
    "build:modern": "rimraf -rf ./dist/appModern && parcel build ./public/index.html --target appModern",
    "clean": "rimraf -rf ./node_modules",
    "test": "jest"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "app": "./dist/app/index.html",
  "appModern": "./dist/appModern/index.html",
  "source": [
    "src/*"
  ],
  "targets": {
    "app": {
      "engines": {
        "browsers": "> 0.25%"
      },
      "distDir": "./dist/app"
    },
    "appModern": {
      "engines": {
        "browsers": "Chrome 80"
      },
      "distDir": "./dist/appModern"
    }
  },
  "alias": {
    "@/pages": "./src/pages",
    "@/components": "./src/components",
    "@/hooks": "./src/hooks"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@jest/core": "^27.4.7",
    "@parcel/packager-raw-url": "^2.2.1",
    "@parcel/transformer-webmanifest": "^2.2.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "parcel": "^2.2.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0"
  }
}
