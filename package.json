{
  "name": "parcel-tsx-boilerplate",
  "version": "0.0.1",
  "scripts": {
    "dev": "parcel serve ./src/index.html",
    "build": "rimraf -rf ./dist/app && parcel build ./src/index.html --target app",
    "build:modern": "rimraf -rf ./dist/appModern && parcel build ./src/index.html --target appModern",
    "clean": "rimraf -rf ./node_modules",
    "test": "jest",
    "commit": "git add -A && git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "app": "./dist/app/index.html",
  "appModern": "./dist/appModern/index.html",
  "source": [
    "src/*"
  ],
  "targets": {
    "app": {
      "engines": {
        "browsers": "> 0.25%"
      },
      "distDir": "./dist/app"
    },
    "appModern": {
      "engines": {
        "browsers": "Chrome 80"
      },
      "distDir": "./dist/appModern"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "alias": {
    "@/pages": "./src/pages",
    "@/components": "./src/components"
  },
  "license": "MIT",
  "dependencies": {
    "husky": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@iceworks/spec": "^1.3.2",
    "@jest/core": "^27.0.6",
    "@parcel/transformer-image": "2.0.0-beta.3.1",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.11",
    "babel-jest": "^27.0.6",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.31.0",
    "eslint-plugin-react": "^7.24.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "parcel": "^2.0.0-beta.3.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0"
  }
}
